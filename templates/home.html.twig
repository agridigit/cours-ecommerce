{% extends 'base.html.twig' %}

{% block body %}

    <h1>Nos produits phares</h1>
    <div class="row">
        {% for product in products %}
            <div class="col-md-4 mt-2">
                <div class="card">
                    <div class="card-body">
                        <div class="card-img-actions"> <img src="{{ product.picture }}" class="card-img img-fluid" width="96" height="350" alt=""> </div>
                    </div>
                    <div class="card-body bg-light text-center">
                        <div class="mb-2">
                            <h6 class="font-weight-semibold mb-2"> <a href="#" class="text-default mb-2" data-abc="true">{{ product.shortDescription }}</a> </h6> <a href="#" class="text-muted" data-abc="true">{{ product.name }}</a>
                        </div>
                        <span ><a class="badge badge-info mb-5" href="{{ path('product_category', {'slug': product.category.slug}) }}">{{ product.getcategory.name }}</a></span>
                        <h3 class="mb-0 font-weight-semibold">{{ product.price /100 }} MAD</h3>
                        <div> <i class="fa fa-star star"></i> <i class="fa fa-star star"></i> <i class="fa fa-star star"></i> <i class="fa fa-star star"></i> </div>

                        <a href="{{ path('product_show', {'category_slug': product.category.slug, 'slug': product.slug}) }}" class="btn btn-info" >Details</a>
                        <a href="#" class="btn btn-warning" >Add to cart</a>


                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

<div class="row mt-4 md-0">
    {% include "shared/_footer.html.twig" with {
        'name': "Home Page",
        'content': "this is a content"
    } %}
</div>

{% endblock %}

